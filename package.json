{
  "name": "configs",
  "version": "0.0.0",
  "private": true,
  "repository": "karolis-sh/configs",
  "license": "MIT",
  "author": "Karolis Å arapnickis <hi@karolis.sh>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "run-p format:*",
    "format:package.json": "sort-package-json package.json packages/*/package.json",
    "format:prettier": "prettier --write .",
    "lint": "eslint . --ignore-path .gitignore",
    "prepare": "husky install",
    "qa": "concurrently -c \"auto\" \"npm:lint\" \"npm:test\"",
    "test": "lerna run test",
    "release": "npm i && npx lerna publish --no-private --conventional-commits --create-release github --no-commit-hooks"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lerna": "^8.0.0",
    "lint-staged": ">=15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "sort-package-json": "^2.6.0"
  },
  "engines": {
    "node": ">=14"
  },
  "volta": {
    "node": "18.18.2"
  }
}
